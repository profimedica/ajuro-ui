
aj-style = "material"
aj-root-font-family = Roboto
aj-root-font-size = 14px

aj-scrollbar-background = inherit
aj-scrollbar-thumb = inherit

aj-border-1 = none

aj-border-color-1 = #000
aj-border-color-2 = #808080

aj-background-1 = #fff

aj-foreground-1 = #666

aj-header-foreground-1 = #666

aj-separator-color = #d3d3d3

aj-cell-focused-border = 1px solid lightgrey
aj-cell-no-focus-border-top = 1px solid transparent
aj-cell-no-focus-border-bottom = 1px solid lightgrey
aj-cell-ltr-no-focus-border-right = 1px solid transparent
aj-cell-ltr-no-focus-border-left = 1px solid transparent
aj-cell-rtl-no-focus-border-right = 1px solid transparent
aj-cell-rtl-no-focus-border-left = 1px solid transparent

aj-cell-highlight-border = 1px solid darkgreen

aj-cell-padding = 2px

aj-row-selected-background-color = #F5F5F5
aj-row-selected-background-color = #F5F5F5
aj-row-odd-background-color = white
aj-row-even-background-color = white
aj-row-floating-background-color = #f0f0f0
aj-row-stub-background-color = #f0f0f0

aj-value-change-delta-up-color = darkgreen
aj-value-change-delta-down-color = darkred
aj-value-change-value-highlight-background-color = #cec

aj-range-selected-color-1 = rgba(120,120,120,0.4)
aj-range-selected-color-2 = rgba(80,80,80,0.4)
aj-range-selected-color-3 = rgba(40,40,40,0.4)
aj-range-selected-color-4 = rgba(0,0,0,0.4)

aj-header-background-1 = none
aj-header-select-padding = 5px 0px 0px 15px

aj-button-background-1 = none
aj-button-foreground-1 = #000
aj-button-border-1 = #808080

aj-header-font-weight = bold

aj-tab-border = 1px solid transparent
aj-tab-background = #f6f6f6
aj-tab-selected-background = #fff
aj-tab-padding = 6px 16px 6px 16px

aj-menu-option-active-color = #BDE2E5

aj-select-background = white
aj-select-foreground = #222

aj-menu-option-padding = 10px 6px 10px 6px
aj-menu-option-shortcut-padding = 10px 6px 10px 6px

@import "theme-common"

.aj-material
  .aj-row-hover
    background-color #eeeeee !important
  .aj-cell-not-inline-editing
    padding-top 15px
  .aj-header-cell-menu-button:hover
    border 1px solid grey

  .aj-header-cell-label
    text-align left

  .aj-header
    border-bottom 1px solid grey

  // we want checkbox to have more spacing to the right and left
  .aj-selection-checkbox
    padding-right 12px
    padding-left 12px
